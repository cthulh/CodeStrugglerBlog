<div class="post_wrapper">
	<div class="post_title">
		<h2>Name: <%= @user.name %></h2>
		<h2>Email: <%= @user.email %></h2>
		<h2>Role: <%= @user.role %></h2>
	</div>
	<div class="actions">
		<% if can? :update, @user %>
			<%= link_to "All users", users_path %>
		<% else %>
			<%= link_to "Back", :back %>
		<% end %>
	</div>
</div> <!-- /post_wrapper -->