<%= link_to "Add user", new_user_path, class: "btn btn-default" %>
<% @users.each do |user| %>
	<div class="post_wrapper">
		<div class="post_title">
			<h2>Name: <%= user.name %></h2>
			<h2>Email: <%= user.email %></h2>
			<h2>Role: <%= user.role %></h2>
		</div>
		<div class="actions">
		<%= link_to "Update", edit_user_path(user.id), class: "btn btn-default" %>
		<%= link_to "Delete", user_path(user.id), method: :delete, class: "btn btn-default" %>
		</div>
	</div> <!-- /post_wrapper -->
<% end %>