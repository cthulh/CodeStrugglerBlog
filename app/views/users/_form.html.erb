<%= form_for @user do |f| %>
	<p>
		<%= f.label :name %> <br>
		<%= f.text_field :name %>
	</p>

	<p>
		<%= f.label :email %> <br>
		<%= f.email_field :email %>
	</p>

	<p>
		<%= f.label :role %> <br>
		<% if current_user.role!="admin" %>
		<%= f.text_field :role, disabled: :true %>
		<% else %>
		<%= f.text_field :role %>
		<% end %>
	</p>

	<p>
		<%= f.label :password %> <br>
		<%= f.text_field :password %>
	</p>

	<p>
		<%= f.submit %>
	</p>
<% end %>