<div class="form_wrapper">
	<%= form_for @user do |f| %>

		<div class="form-group">
			<%= f.label :name %> <br>
			<%= f.text_field :name, class: "form-cotrol" %>
		</div>

		<div class="form-group">
			<%= f.label :email %> <br>
			<%= f.email_field :email, class: "form-cotrol" %>
		</div>

		<div class="form-group">
			<%= f.label :role %> <br>
			<%= f.text_field :role, class: "form-cotrol" %>
		</div>

		<div class="form-group">
			<%= f.label :password %> <br>
			<%= f.password_field :password, class: "form-cotrol" %>
		</div>

		<%= f.button "Submit", type: "submit", class: "btn btn-default"%>

	<% end %>
</div>